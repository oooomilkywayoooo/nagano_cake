<div class="container">
  <p class="mt-5" style="width: 200px;">
    <h4><strong class="bg-light px-3">新規会員登録</strong></h4>
  </p>
    <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="row mb-3">
      <div class="col-lg-3">
        <p class="mt-5 mb-5"><%= f.label :"名前" %></p>
        <p class="mt-2"><%= f.label :"フリガナ" %></p>
        <p><%= f.label :"メールアドレス" %></p>
        <p><%= f.label :"郵便番号(ハイフンなし)" %></p>
        <p><%= f.label :"住所", class: "col-form-label" %></p>
        <p><%= f.label :"電話番号(ハイフンなし)", class: "col-form-label" %></p>
        <p><%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        </p>
        <p><%= f.label :"パスワード(確認用)", class: "col-form-label" %></p>
      </div>

      <div class="col-lg-3">
        <%= f.label :"(姓)　", class: "mr-3" %>
        <%= f.text_field :last_name, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "last_name" %>
        <%= f.label :"(セイ)", class: "mr-3" %>
        <%= f.text_field :last_name_kana, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "last_name_kana" %>
        <%= f.email_field :email, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "email" %>
        <%= f.text_field :postal_code, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "postal_code" %>
        <%= f.text_area :address, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "address", row: "1" %>
        <%= f.text_field :telephone_number, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "telephone_number" %>
        <%= f.password_field :password, class: "mt-2 form-control d-{inline-block}", autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, class: "mt-2 form-control d-{inline-block}", autocomplete: "new-password" %>
      </div>

      <div class="col-lg-3">
        <%= f.label :"(名)　", class: "mr-3 ml-2" %>
        <%= f.text_field :first_name, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "first_name" %>
        <%= f.label :"(メイ)", class: "mr-3 ml-2" %>
        <%= f.text_field :first_name_kana, class: "mt-2 form-control d-{inline-block}", autofocus: true, autocomplete: "first_name_kana" %>
      </div>
    </div>
    <div class="actions text-center mb-5">
      <%= f.submit "新規登録", class: "px-3 btn btn-success" %>
    </div>
    <% end %>
</div>