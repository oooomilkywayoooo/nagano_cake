<div class="container mx-auto">
  <p class="mt-5">
  <h4 class="mb-5"><strong class="bg-light px-3">注文情報確認画面</strong></h4>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-bordered">
      <thead class="bg-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <%if current_customer.cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "60x50", fallback: "no_image1.jpeg" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.sum_of_price %></td>
          </tr>
        </tbody>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-3">
      <table class="table table-bordered">
        <tbody>
          <tr><th class="bg-light" style="width: 50%;">送料</th>
          <td style="width: 50%;"><%= @order.shipping_fee %></td></tr>
          <tr><th class="bg-light" style="width: 50%;">商品合計</th>
          <td style="width: 50%;"><%= @total.round.to_s(:delimited) %></td></tr>
          <tr><th class="bg-light" style="width: 50%;">請求金額</th>
          <td style="width: 50%;"><%= @shipping_fee + @total.round.to_s(:delimited) %></td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>