<div class="container mx-auto">
  <p class="mt-5">
  <h4 class="mb-5"><strong class="bg-light px-3">注文履歴一覧</strong></h4>
</div>

<div class="container mx-auto">
    <table class="table table-bordered">
        <thead class="bg-light">
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
            </tr>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                    〒<%= order.ship_postalcode %>
                </br><%= order.ship_address %>
                </br><%= order.ship_name %>
                </td>
                <td>
                    <% order.orders_details.each do |orders_detail| %>
                    <%= orders_detail.item.name %><br>
                    <% end %>
                </td>
                <td><%= order.amount_billed %>円</td>
                <td><%= order.order_status_i18n %></td>
                <td><%= link_to "表示する", public_order_path(order), class: "btn btn-primary" %></td>
            </tr>
        </tbody>
        <% end %>
        </thead>
    </table>
</div>