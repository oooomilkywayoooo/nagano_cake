<div class="container mx-auto">
  <p class="mt-5">
  <h4 class="mb-5"><strong class="bg-light px-3">注文情報入力画面</strong></h4>
</div>

<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
<div class="container">
  <div class="row">
    <strong><%= f.label :payment_method,"支払方法" %></strong>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4 ml-5">
      <label><%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %></label>
    </div>
  </div>
</div>

<div class="container mt-2">
  <div class="row">
    <strong><%= f.label :ship_address,"お届け先" %></strong>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8 ml-5">
      <%= f.radio_button :ship_address, "ご自身の住所" %>
      <%= f.label :"ご自身の住所" %>
      </br><span class="ml-3">〒<%= @address %></span>
      </br><span class="ml-3"><%= @name %></span>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-lg-8 ml-5">
      <%= f.radio_button :ship_address, "登録済み住所から選択" %>
      <%= f.label :"登録済み住所から選択" %>
      
      </span>
    </div>
  </div>
</div>
<% end %>

