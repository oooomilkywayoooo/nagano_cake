<div class="container mx-auto">
  <p class="mt-5">
  <h4 class="mb-5"><strong class="bg-light px-3">配送先編集</strong></h4>
</div>

<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-form-label" %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-3">
      <%= f.label :"住所", class: "col-form-label" %>
    </div>
    <div class="col-lg-6">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-3">
      <%= f.label :"宛名", class: "col-form-label" %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-lg-4 text-right mb-5">
      <%= f.submit '変更内容を保存', class: "btn btn-success px5"%>
    </div>
  </div>
</div>
<% end %>