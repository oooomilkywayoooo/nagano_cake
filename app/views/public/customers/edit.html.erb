<div class="container mx-auto">
  <p class="mt-5">
  <h4 class="mb-5"><strong class="bg-light px-3">会員情報編集</strong></h4>
</div>

<% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
            <% @customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
<% end %>

<%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>
<div class="container">
    <div class="row">
        <div class="col-lg-2">
            <%= f.label :"氏名", class: "col-form-label "%>
        </div>
        <div class="col-lg-8">
            <div class="form-inline">
                <%= f.text_field :last_name, class: "form-control" %>
                <span class="ml-5"><%= f.text_field :first_name, class: "form-control" %></span>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-2">
            <%= f.label :"フリガナ", class: "col-form-label "%>
        </div>
        <div class="col-lg-8">
            <div class="form-inline">
                <%= f.text_field :last_name_kana, class: "form-control" %>
                <span class="ml-5"><%= f.text_field :first_name_kana, class: "form-control" %></span>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-2">
            <%= f.label :"郵便番号", class: "col-form-label" %>
        </div>
        <div class="col-lg-4">
            <%= f.text_field :postal_code, class: "form-control" %>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-2">
            <%= f.label :"住所", class: "col-form-label" %>
        </div>
        <div class="col-lg-8">
            <%= f.text_area :address, class: "form-control", rows: "1" %>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-2">
            <%= f.label :"電話番号", class: "col-form-label" %>
        </div>
        <div class="col-lg-4">
            <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-2">
            <%= f.label :"メールアドレス", class: "col-form-label" %>
        </div>
        <div class="col-lg-4">
            <%= f.text_field :email, class: "form-control" %>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mt-5 mb-5">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="form-inline">
                <span class="mr-5 pr-5"><%= f.submit '編集内容を保存', class: "btn btn-success px4" %></span>
                <span class="ml-5 pl-5"><%= link_to '退会する', public_customer_quit_path(@customer), class: "btn btn-danger px4" %></span>
            </div>
        </div>
    </div>
</div>
<% end %>