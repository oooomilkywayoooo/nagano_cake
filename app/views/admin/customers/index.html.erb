<div class="container mx-auto">
  <p class="mt-5">
    <h4 class="mb-5"><strong class="bg-light px-3">会員一覧</strong></h4>
  </p>
  <div class="row">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
            </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active == true %>
              <p class="text-success"><strong>有効</strong></p>
            <% elsif customer.is_active == false %>
              <p class="text-secondary"><strong>退会</strong></p>
            <% end %>
            </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="text-center"><%= paginate(@customers) %></div>
</div>