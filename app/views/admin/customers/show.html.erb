<div class="container mx-auto">
  <p class="mt-5">
    <h4 class="mb-5"><strong class="bg-light px-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</strong></h4>
  </p>
  <div class="row">
    <div class="col-lg-3">
      <p>会員ID</p>
      <p>氏名</p>
      <p>フリガナ</p>
      <p>郵便番号</p>
      <p>住所</p>
      <p>電話番号</p>
      <p>メールアドレス</p>
      <p>会員ステータス</p>
    </div>
    <div class="col-lg-9">
      <p><%= @customer.id %></p>
      <p><%= @customer.last_name %> <%= @customer.first_name %></p>
      <p><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></p>
      <p><%= @customer.postal_code %></p>
      <p><%= @customer.address %></p>
      <p><%= @customer.telephone_number %></p>
      <p><%= @customer.email %></p>
      <p><%if @customer.is_active == true %>
          <p class="text-success"><strong>有効</strong></p>
         <% else @customer.is_active == false %>
          <p class="text-secondary"><strong>退会</strong></p>
         <% end %>
      </p>
    </div>
  </div>
  <div class="text-center mt-5">
    <span class="mr-5"><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success px3" %></span>
    <span class="ml-5"><%= link_to "注文履歴一覧を見る", '/orders', class: "btn btn-primary px3" %></span>
  </div>
</div>