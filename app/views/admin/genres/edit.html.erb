<div class="container mx-auto">
   <p class="mt-5" style="width: 200px;">
     <h4><strong class="bg-light px-3">ジャンル編集</strong></h4>
   </p>
   <div class="row" style="width: 600px;">
     <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
     <strong>ジャンル名</strong>
        <label class="px-5 mt-5"><%= f.text_field :name %></label>
        <%= f.submit '変更を保存', class: "btn btn-success px-4" %>
      <% end %>
   </div>
</div>