<div class="container mx-auto">
  <p class="mt-5">
    <h4 class="mb-5"><strong class="bg-light px-3">注文履歴詳細</strong></h4>
  </p>
  <div class="row">
    <div class="col-lg-3">
      <p class="mt-2 mb-2"><strong>購入者</strong></p>
      <p class="mt-2 mb-2"><strong>注文日</strong></p>
      <p class="mt-2 mb-4"><strong>配送先</strong></p>
      <p class="mt-2 mb-2"><strong>支払方法</strong></p>
      <p class="mt-2 mb-4"><strong>注文ステータス</strong></p>
    </div>
    <div class="col-lg-9">
      <% @ordrs.each do |order| %>
        <p>
          <%= link_to public_customer_path do %>
            <%= order.customer.last_name %> <%= order.customer.first_name %>
          <% end %>
        </p>
        <p><%= order.created_at %></p>
        <p><%= order.ship_address %></p>
        <p><%= order.ship_name %></p>
        <p><%= order.payment_mrthod %></p>
        <p><%= select :order_status,:name,Order.statuses.keys.to_a %></p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-8">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.item.name %></td>
            <td><%= order.item.add_tax_price.to_s(:delimited)%></td>
            <td><%= order.orders_detail.amount %></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>